{% extends "index.html.twig" %}

{% block content %}
    <div class="login__header">
        <h3 class="brand">SugarCRM</h3>
    </div>
    <div class="login__body" style="max-width: 500px;">
        {% if user_name is not empty and provider is not empty and tid is not empty %}
            You are logged in as <strong>{{ user_name }}</strong><br />
            Your tenanant id is <strong>{{ tid }}</strong><br />
            Authentication provider - <strong>{{ provider }}</strong><br />
        {% endif %}
        <br/>
        <br/>
        <form action="{{ path('logout') }}"  method="post" >
            <button id="logout_btn" track="click:logout"
                    class="btn btn--primary fast-click-highlighted">Log out
            </button>
        </form>

    </div>
{% endblock %}
